{
  "name": "my-cv",
  "version": "1.0.1",
  "description": "My personal website",
  "main": "index.js",
  "scripts": {
    "start": "webpack-dev-server",
    "clean": "rimraf dist",
    "production": "cross-env npm run clean && webpack --config webpack.production.config.js --progress --profile --colors",
    "lint": "eslint ./app/**/**.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "coverage": "jest --coverage",
    "precommit": "cross-env npm run lint && npm test",
    "prepush": "cross-env npm run lint && npm test",
    "start:api": "webpack --config webpack.api.js",
    "build:api": "cross-env NODE_ENV=production webpack --config webpack.api.js",
    "serve:api-dev": "nodemon ./dist/api/api.js"
  },
  "author": "Jonathan Guo <chc.jonathan.guo@outlook.com>",
  "license": "MIT",
  "jest": {
    "setupFiles": [
      "<rootDir>/config/jest/shim.js"
    ],
    "mapCoverage": true,
    "collectCoverageFrom": [
      "app/**/*.{js,jsx,ts,tsx}"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/config/jest/assetsTransformer.js",
      "\\.(css|less)$": "<rootDir>/config/jest/assetsTransformer.js"
    },
    "testMatch": [
      "**/?(*.)(spec|test).js?(x)"
    ],
    "setupTestFrameworkScriptFile": "raf/polyfill",
    "transform": {
      "\\.js$": "babel-jest"
    }
  },
  "dependencies": {
    "@fortawesome/fontawesome": "^1.1.3",
    "@fortawesome/fontawesome-free-brands": "^5.0.6",
    "@fortawesome/fontawesome-free-solid": "^5.0.6",
    "@fortawesome/react-fontawesome": "^0.0.17",
    "@koa/cors": "2",
    "animated-scroll-to": "^1.1.8",
    "axios": "^0.16.2",
    "babel-polyfill": "^6.26.0",
    "cross-env": "5.1.2",
    "dotenv": "^4.0.0",
    "koa": "^2.5.0",
    "koa-bodyparser": "^4.2.0",
    "koa-router": "^7.4.0",
    "moment": "^2.20.1",
    "nodemailer": "^4.6.2",
    "pluralize": "^7.0.0",
    "raf": "^3.3.2",
    "react": "16.2.0",
    "react-burger-menu": "^2.2.3",
    "react-dom": "16.2.0",
    "react-hot-loader": "^4.0.0",
    "react-loadable": "^5.3.1",
    "react-particles-js": "^2.1.0",
    "react-recaptcha": "^2.3.7",
    "react-redux": "^5.0.6",
    "react-router-dom": "4.2.2",
    "react-router-redux": "^5.0.0-alpha.6",
    "react-tooltip": "^3.4.0",
    "react-waypoint": "^8.0.0",
    "redux": "^3.7.2",
    "redux-saga": "^0.15.6",
    "validatorjs": "^3.14.2"
  },
  "devDependencies": {
    "autoprefixer": "^7.2.5",
    "babel-cli": "6.26.0",
    "babel-core": "6.26.0",
    "babel-eslint": "8.1.2",
    "babel-jest": "22.1.0",
    "babel-loader": "7.1.2",
    "babel-plugin-dynamic-import-node": "^1.2.0",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "6.24.1",
    "babel-preset-react-boilerplate": "1.1.1",
    "babel-preset-react-hmre": "1.1.1",
    "babel-preset-stage-2": "6.24.1",
    "copy-webpack-plugin": "^4.5.1",
    "css-loader": "0.28.9",
    "enzyme": "3.3.0",
    "enzyme-adapter-react-16": "1.1.1",
    "eslint": "4.13.0",
    "eslint-config-airbnb": "16.1.0",
    "eslint-loader": "1.9.0",
    "eslint-plugin-import": "2.8.0",
    "eslint-plugin-jsx-a11y": "6.0.3",
    "eslint-plugin-react": "7.5.1",
    "extract-text-webpack-plugin": "3.0.2",
    "file-loader": "1.1.6",
    "html-webpack-plugin": "2.30.1",
    "husky": "0.15.0-rc.2",
    "jest": "22.1.0",
    "node-sass": "4.7.2",
    "open-browser-webpack-plugin": "0.0.5",
    "postcss-cssnext": "^3.1.0",
    "postcss-each": "^0.10.0",
    "postcss-import": "^11.0.0",
    "postcss-loader": "^2.1.0",
    "precss": "^3.1.0",
    "react-test-renderer": "16.2.0",
    "redux-logger": "^3.0.6",
    "redux-saga-test-plan": "^3.2.0",
    "rimraf": "2.6.2",
    "sass-loader": "6.0.6",
    "start-server-webpack-plugin": "^2.2.5",
    "style-loader": "0.19.1",
    "tailwindcss": "^0.4.1",
    "tap-spec": "^4.1.1",
    "tape": "^4.8.0",
    "url-loader": "0.6.2",
    "webpack": "3.10.0",
    "webpack-dev-server": "2.9.6",
    "webpack-node-externals": "^1.6.0"
  }
}
